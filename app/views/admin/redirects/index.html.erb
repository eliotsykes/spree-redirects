<div class='toolbar'>
  <ul class='actions'>
    <li>
      <%= button_link_to t('new_redirect'), new_object_url, :icon => 'add' %></p>
    </li>
  </ul>
  <br class='clear' />
</div>


<h1><%= t('listing_redirects') %></h1>


<table class="index">
  <thead>
    <th><%= order_by_link :from, :text => t('redirects_from') %></th>
    <th><%= t('redirects_to') %></th>
    <th><%= order_by_link :status, :text => t('redirect_status') %></th>
    <th><%= order_by_link({:target => :type}, :text => t('redirect_target')) %></th>
    <th><%= t('action') %></th>
  </thead>
  <tbody>
    <%- @collection.each do |redirect|%>
    <tr id="<%= dom_id redirect %>">
      <td><%= redirect.from %></td>
      <td><%= redirect.target_location %></td>
      <td><%= redirect.status_summary %></td>
      <td><%= redirect.target_type_humanized %></td>
      <td>
      	<%= link_to_edit redirect %> &nbsp;
      	<%= link_to_delete redirect %> &nbsp;
      	<%= link_to_with_icon 'direction', t('redirect_test'), redirect.from, 
      	     :popup => true, :title => t('opens_in_new_window') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= page_links(:prev => "&#171; #{t('previous')}", :next => "#{t('next')} &#187;") if @search.page_count > 1 %>
